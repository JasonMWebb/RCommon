<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageIcon>reactor2-icon-darkbg-small.jpg</PackageIcon>
    <PackageIconUrl />
    <RepositoryUrl>https://github.com/Reactor2Team/RCommon</RepositoryUrl>
    <PackageProjectUrl>https://github.com/Reactor2Team/RCommon</PackageProjectUrl>
    <Description>A lightweight application framework that utilizes abstractions over commonly used patterns to future proof applications.</Description>
    <Authors>Reactor2, Jason Webb</Authors>
    <Company>RCommon</Company>
    <Version>1.0.1.45</Version>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>RCommon, application services, common application services, email, CRUD helpers, c#, .NET</PackageTags>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\RCommon.BusinessServices\RCommon.BusinessServices.csproj" />
    <ProjectReference Include="..\RCommon.DependencyInjection\RCommon.DependencyInjection.csproj" />
    <ProjectReference Include="..\RCommon.Validation\RCommon.Validation.csproj" />
    <ProjectReference Include="..\RCommon.Core\RCommon.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\RCommon.Core\reactor2-icon-darkbg-small.jpg">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
    <PackageReference Include="Serilog" Version="2.10.0" />
  </ItemGroup>

</Project>
